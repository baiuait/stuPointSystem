<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title></title>
    <link rel="stylesheet" href="/layui/css/layui.css">
    <script src="/js/const/jquery-3.3.1.js"></script>

</head>
<body>
    <div class="layui-body">
        <!-- 内容主体区域 -->
        <div style="padding: 15px;">

            <div class="layui-container">
                <div class="layui-row">
                    <div id="lalla" class="layui-col-md6 layui-col-md-offset3">
                    </div>
                </div>
                <div class="layui-row">
                    <div class="layui-btn-group demoTable">
                    <button class="layui-btn layui-btn-sm" data-type="getCheckLength">删除信息（点击复选框进行删除）</button>
                        <button class="layui-btn layui-btn-sm" lay-event="addGrade" onclick="addCause()">新增原因</button>
                </div>
                    <div class="layui-col-md12">
                        <table id="demo4" class="layui-table" lay-filter="test"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="layui-col-md6 layui-col-md-offset3">
</div>
<div class="layui-row">
    <div class="layui-col-md12">

    </div>
</div>


<script src="/layui/layui.all.js"></script>
<script>

function addCause(){

        layer.open({
            type: 1,
            skin: 'layui-layer-rim', //加上边框
            area: ['350px', '360px'], //宽高
            content:'<div class="layui-form-item">\n' +
                '                            <label class="layui-form-label">记录</label>\n' +
                '                               <div class="layui-input-inline">\n' +
                '                                  <input type="text" name="cause" id="name"  placeholder="请输入记录" required lay-verify="required"  class="layui-input">\n' +
                '                               </div>\n' +
                '                            <div class="layui-input-inline">\n' +
                '                                <input type="button" value="添加" class="layui-btn layui-btn-primary add" style="margin: 50px" onclick="add()">\n' +
                '                            </div>\n' +
                '                        </div>'
        });
}


    layui.use('table', function(){
        var table = layui.table,
            $=layui.jquery;
        active = {
            getCheckLength: function(){ //获取选中数目
                var checkStatus = table.checkStatus('demo4')
                    ,data = checkStatus.data;
                var list=new Array();
                for (var i =0 ; i<data.length;i++){
                    list[i]=data[i].id
                }
                if (list.length == 0){
                    alert("您没有选择任何信息！");
                }else {
                    layer.confirm('真的删除行么', function (index) {
                        $.getJSON("/cause/del?list=" + list, function (data) {
                            // if (data == "true") {
                            layer.close(index);
                            //第一个实例
                            table.render({
                                elem: '#demo4'
                                , height:'full'
                                , limit: 10
                                , url: '/cause/selecCausePage' //数据接口
                                , page: true //开启分页
                                , cols: [[ //表头
                                    {type: 'checkbox', fixed: 'left'}
                                    , {field: 'id', title: 'ID',  sort: true, fixed: 'left'}
                                    , {field: 'cause', title: '信息'}
                                ]]
                            });

                        });
                    });
                }
            }
        };


        $('.demoTable .layui-btn').on('click', function(){
            var type = $(this).data('type');
            active[type] ? active[type].call(this) : '';
        });
    });


    function add(){
        var cause=$("#name").val();
        $.getJSON("/cause/add","cause="+cause,function (data) {
            if(data!=null){
                if(data.toString()=="true"){
                    layer.msg("新增原因成功！");
                    $("#name").val("");
                    //刷新table
                    layui.use('table',function () {
                        var table = layui.table;
                        //第一个实例
                        table.render({
                            elem: '#demo4'
                            ,height: 'full'
                            ,limit: 10
                            ,url: '/cause/selecCausePage' //数据接口
                            ,page: true //开启分页

                            ,cols: [[ //表头
                                {type:'checkbox', fixed: 'left'}
                                ,{field: 'id', title: 'ID',  sort: true, fixed: 'left'}
                                ,{field: 'cause', title: '信息'}
                            ]]
                        });
                    })
                }else{
                    layer.msg("新增原因失败！");
                }
            }
        })
    }
    layui.use('table',function () {
        var table = layui.table;
        //第一个实例
        table.render({
            elem: '#demo4'
            , height: 'full'
            , limit: 10
            , url: '/cause/selecCausePage' //数据接口
            , page: true //开启分页

            , cols: [[ //表头
                {type: 'checkbox', fixed: 'left'}
                , {field: 'id', title: 'ID', sort: true, fixed: 'left'}
                , {field: 'cause', title: '信息'}
            ]]
        });
    });
</script>
