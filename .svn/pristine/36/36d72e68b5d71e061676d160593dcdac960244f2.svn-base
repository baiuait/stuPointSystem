<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>用户信息</title>
    <link rel="stylesheet" href="/layui/css/layui.css" media="all">
</head>

<form class="layui-form" >
    <!--<input type="text" placeholder="用户名" class="prizeName"/>-->
    <!--<input type="button" class="buttonName" value="搜索" onclick="clickPrizeName();"/>-->
    <div class="layui-form-item">
        <div class="layui-input-inline">
            <input type="text" name="title" required  lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input prizeExchangRecordName" style="width: 200px">
        </div>
        <input type="button" class="layui-btn" value="搜索" onclick="prizeExchangRecordName();"/>
    </div>
</form>


<table id="demo" lay-filter="test">

</table>
<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
</script>

<script src="/layui/layui.all.js"></script>
<script src="/js/const/jquery-3.3.1.js"></script>
<script>
    loadData();
    var name;
    var id;
    var open;
    function prizeExchangRecordName(){
        name=$(".prizeExchangRecordName").val();
        alert(prizeExchangRecordName)
        loadData();
    }
    function loadData(){
        layui.use('table', function(){
            var table = layui.table;
            //第一个实例
            table.render({
                elem: '#demo'
                ,height: 'full'
                ,url: '/page/pageList' //数据接口
                ,page: true //开启分页
                ,cols: [[ //表头
                    {field: 'id', title: 'ID', sort: true, fixed: 'left'}
                    ,{field: 'name', title: '用户名',templet: '<div>{{d.user.name}}</div>'}
                    ,{field: 'prizeName', title: '奖品名称',templet: '<div>{{d.prize.name}}</div>'}
                    ,{field: 'creationTime', title: '兑换时间'}
                    ,{field: 'isReceive', title: '未领取已领取'}
                    ,{field: 'qrCode', title: '奖品兑换二维码'}
                    ,{ title:'操作', toolbar: '#barDemo'}
                ]]
                ,where: {
                    // //.渲染请求参数(查询条件等)
                    name:name
                }
            });
            //监听行工具事件
            table.on('tool(test)', function(obj){
                var data = obj.data;
               id=data.id;
                if(obj.event === 'edit'){
                    $.getJSON("/prizeExchangeRecord/getPrizeExchangeRecordById?id="+id,function (info) {
                        alert(info.Data.user.name);
                        alert(info.Code);
                        if(info.Code=="200"){

                            open= layer.open({
                                type: 1,
                                skin: 'layui-layer-rim', //加上边框
                                area: ['450px', '500px'], //宽高
                                content:"用户名:"+info.Data.user.name+"" +
                                    "</br><select class='select'><option value='1'>已领取</option><option value='0'>未领取</option></select>"+
                                    "</br>奖品兑换二维码:"+info.Data.qrCode+""+
                                    "</br>奖品名称:"+info.Data.prize.name+""+
                                    "</br><a href='#' id='updisReceive' onclick='updisReceive();'>修改</a>"
                            });
                        }else{
                            alert("获取信息失败");
                        }
                    })
                    $(function () {
                        $.getJSON("/prizeExchangeRecord/getPrizeExchangeRecordById?id="+id,function (info) {
                            $(".select option").each(function () {
                                if(info.Code=='200') {
                                    if(info.Data.isReceive==$(this).val()){
                                        $(this).prop("selected",'selected');
                                    }
                                }else{
                                    alert("获取信息失败")
                                }

                            })
                        });
                    })
                }
            });
        });

    }
    function updisReceive(){
        var isReceive=$(".select").find("option:selected").val();
        $.getJSON("/prizeExchangeRecord/updPrizeExchangeRecordReceive?id="+id+"&isReceive="+isReceive,function (info) {
            if(info.Code=="200"){
                alert("修改成功");
                layer.close(open);
                loadData();
            }else{
                alert("修改失败");
            }
        })
    }

</script>
</body>
</html>