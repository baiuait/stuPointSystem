<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>用户信息</title>
    <link rel="stylesheet" href="/layui/css/layui.css" media="all">
</head>

<form class="layui-form" >
    <!--<input type="text" placeholder="用户名" class="prizeName"/>-->
    <!--<input type="button" class="buttonName" value="搜索" onclick="clickPrizeName();"/>-->
    <div class="layui-form-item">
        <div class="layui-input-inline">
            <input type="text" name="title" required  lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input prizeExchangRecordName" style="width: 200px">
        </div>
        <input type="button" class="layui-btn" value="搜索" onclick="prizeExchangRecordName();"/>
    </div>
</form>


<table id="demo" lay-filter="test">

</table>
<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-xs upd"  lay-filter="testId" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">下架</a>
</script>

<script src="/layui/layui.all.js"></script>
<script src="/js/const/jquery-3.3.1.js"></script>
<script>


    loadData();
    var name;
    function prizeExchangRecordName(){
        name=$(".prizeExchangRecordName").val();
        alert(prizeExchangRecordName)
        loadData();
    }
    function loadData(){
        layui.use('table', function(){
            var table = layui.table;
            //第一个实例
            table.render({
                elem: '#demo'
                ,height: 'full'
                ,url: '/prizeExchangeRecord/pageList' //数据接口
                ,page: true //开启分页
                ,cols: [[ //表头
                    {field: 'id', title: 'ID', sort: true, fixed: 'left'}
                    ,{field: 'name', title: '用户名',templet: '<div>{{d.user.name}}</div>'}
                    ,{field: 'prizeName', title: '奖品名称',templet: '<div>{{d.prize.name}}</div>'}
                    ,{field: 'creationTime', title: '兑换时间'}
                    ,{field: 'isReceive', title: '未领取已领取'}
                    ,{field: 'qrCode', title: '奖品兑换二维码'}
                ]]
                ,where: {
                    // //.渲染请求参数(查询条件等)
                    name:name
                }
            });
        });
    }

</script>
</body>
</html>